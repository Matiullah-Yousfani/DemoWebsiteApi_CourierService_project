@model IEnumerable<ApplicationUser>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Register New User
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table id="tblData" class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                    <th>Address</th>
                    <th>Role</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>@item.Role</td>
                        <td class="text-center">
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i> Update
                            </a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm ms-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
