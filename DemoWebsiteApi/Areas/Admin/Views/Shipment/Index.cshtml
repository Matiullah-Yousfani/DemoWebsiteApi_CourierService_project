@model List<Shipment>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-6">
            <h2 class="text-primary">Shipment List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Customer" asp-controller="Shipment" asp-action="Upsert" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Add New Shipment
            </a>
            <a asp-controller="Shipment" asp-action="BulkUpsert" class="btn btn-secondary">
                <i class="bi bi-upload"></i> Add Bulk Shipment
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table id="tblData" class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Consignee Name</th>
                    <th>COD Amount</th>
                    <th>City</th>
                    <th>Address</th>
                    <th>Sender</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ConsigneeName</td>
                        <td>@item.CODAmount.ToString("C")</td>
                        <td>@item.City</td>
                        <td>@item.Address</td>
                        <td>@item.ApplicationUser?.Name</td>
                        <td class="text-center">
                            <a asp-controller="Shipment" asp-action="Upsert" asp-route-id="@item.ShipmentId" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i> Update
                            </a>
                            <a asp-controller="Shipment" asp-action="Delete" asp-route-id="@item.ShipmentId" class="btn btn-outline-danger btn-sm ms-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
